{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "module": "esnext",
    "paths": {
      "@/*": ["./*"],
      "expo-router": ["node_modules/expo-router"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "node_modules/@types",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
